<div class="jumbotron">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<%= gravatar_tag current_user.email, size: 300 %>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h3><%= @user.username %></h3>
			<p>Name: <%= @user.name %></p>
			<p>Age: <%= @user.age %></p>
			<p>School: <%= @user.school %></p>
			<p>Work: <%= @user.work %></p>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4">
				<h3>About Me</h3>
				<small><%= @user.bio %></small>
		</div>	
	</div>
</div>